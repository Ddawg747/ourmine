tmpdownload=$HOME/tmpdown;
mkdir -p $tmpdownload; cd $tmpdownload;
base=$HOME/opt/ourmine; mkdir -p $base
wget -rq ourmine.googlecode.com/svn .
cp -R ourmine.googlecode.com/svn/trunk/our/ $base
rm -rf $tmpdownload

echo "Ourmine installed to: $base. To run, enter "cd $base" then "./ourmine". To remove, enter "rm -rf $base.""